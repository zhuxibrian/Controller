<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.pl.wheelview.WheelView
        android:id="@+id/province_wv"
        android:layout_width="10dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@color/colorAccent"
        app:lineHeight="1.5dp"
        app:maskDarkColor="#00000000"
        app:maskLightColor="#00000000"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="12sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="16sp"
        app:unitHeight="50dp" />

    <com.pl.wheelview.WheelView
        android:id="@+id/city_wv"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        app:itemNumber="3"
        app:lineColor="@color/colorAccent"
        app:lineHeight="1.5dp"
        app:maskDarkColor="#00000000"
        app:maskLightColor="#00000000"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="12sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="16sp"
        app:unitHeight="50dp" />

    <com.pl.wheelview.WheelView
        android:id="@+id/speed_wv"
        android:layout_width="10dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        app:isCyclic="true"
        app:itemNumber="3"
        app:lineColor="@color/colorAccent"
        app:lineHeight="1.5dp"
        app:maskDarkColor="#00000000"
        app:maskLightColor="#00000000"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="12sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="16sp"
        app:unitHeight="50dp" />
</LinearLayout>


